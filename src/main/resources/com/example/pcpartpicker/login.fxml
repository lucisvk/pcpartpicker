<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javax.print.DocFlavor.URL?>
<AnchorPane prefWidth="400" prefHeight="300" styleClass="root-pane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.LoginController">
    <stylesheets>
        <URL value="@../../../style.css" />
    </stylesheets>
    <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="50" prefWidth="300" prefHeight="200">
        <Label text="PC Part Picker" styleClass="header"/>
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button text="Login" fx:id="loginButton" onAction="#handleLogin" styleClass="button"/>
        <Label fx:id="errorLabel" textFill="red"/>
    </VBox>
</AnchorPane>